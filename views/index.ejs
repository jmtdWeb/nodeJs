<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title><%=title%></title>
    <meta name="keywords" content="关键字,关键字" />
    <meta name="description" content="描述" />
    <link rel="stylesheet" type="text/css" href="css/base.css"/>
    <link rel="stylesheet" type="text/css" href="css/fontIcon.css"/>
    <link rel="stylesheet" href="swiper/swiper-bundle.min.css">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, telephone=no" name="viewport">
    <meta content="telephone=no" name="format-detection" />
    <meta content="yes" name="apple-mobile-web-app-capable" />
    <script src="swiper/swiper-bundle.min.js"></script>
</head>

<body>
<div id="page" class="page">
    <%- include('components/Header', {header: title}); %>
    <!-- 开始 -->
    <% lists.forEach(function(item){%>
    <div>
        <% if (item.tp == 'banner') { %>
            <% if (item.css == 7) { %>
                <div class="pageBanner pageBanner_<%= item.css %>">
                    <div class="swiper-container swiper-container_<%= item.css %>">
                        <div class="swiper-wrapper">
                            <% item.lists.forEach(function(img){%>
                                <div class="swiper-slide"><a href="<%= img.url %>"><img src="<%= img.img %>"></a></div>
                            <% }) %>
                        </div>
                        <div class="swiper-pagination swiper-pagination_<%= item.css %>"></div>
                    </div>
                </div>
                <script>
                    var swiper = new Swiper('.swiper-container_<%= item.css %>', {
                        pagination: {
                            el : '.swiper-pagination_<%= item.css %>',
                        },
                        loop : true,
                        autoplay: {
                            delay: 2500,
                            disableOnInteraction: false,
                        },
                    });
                </script>
            <% } else { %>
                <div class="pageBanner pageBanner_<%= item.css %>">
                    <ul>
                        <% item.lists.forEach(function(img){%>
                            <li><a href="<%= img.url %>"><img src="<%= img.img %>"></a></li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>
        <% } else if (item.tp == 'popularity') { %>
            <%- include('components/popularity', {num: item.num}); %>
        <% } else { %>
            <a href="#"><%= item.tp %></a>
        <% } %>
    </div>
    <% }) %>
    <%- include('components/Footer', {index: 0}); %>
</div>
<script>

</script>
</body>